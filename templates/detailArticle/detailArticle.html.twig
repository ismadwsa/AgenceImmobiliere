{% extends 'base.html.twig' %}
{% block title %}Article par Catégories{% endblock %}
{% block body %}
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-inner d-flex justify-content-center">
    <div class="carousel-item active m-2">
      <img src="/image/articles/imagePrincipale/{{mesArticles.imageName}}" style="height:500px; widht:200px" alt="imagePrincipale">
    </div>
         
      <div class="carousel-item">
        <img src="" class="d-block w-100" alt="photo1">
      </div>
      <div class="carousel-item">
        <img src="" class="d-block w-100" alt="photo2">
      </div>
      <div class="carousel-item">
        <img src="" class="d-block w-100" alt="photo3">
      </div>
    </div>

   <div class="col-5">
          <h1>{{mesArticles.titre}}<h1>
          <h6>Loyer: {{mesArticles.loyer}} €/mois<h6>
          <h6>Localisation: {{mesArticles.localisation}}<h6>
          <h6> Parking: {{mesArticles.parking}}<h6>
          <h6>Terasse: {{mesArticles.terasse}}<h6>
          <button class="btn btn-warning my-3" id="affichage"> Afficher plus </button>
          <h6 id="detail">{{mesArticles.transaction}}<h6>{# <p id="detail">{{mesArticles.contenu}}<p> #}
      </div>
</div>
<button class='btn btn-danger'><a href="{{ path('accueil') }}">Retour<a></button>
<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script>
	jQuery(document).ready(function()
   {
	   jQuery('#detail').hide();
     jQuery('#affichage').click(function()
   {
     jQuery('#detail').slideToggle(400);
  return false;
      });
   });
</script>
{% endblock %}