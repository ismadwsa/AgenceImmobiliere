{% extends 'base.html.twig' %}
{% block title %}Ajouter un article
{% endblock %}
{% block body %}
	<h1>Ajouter un article</h1>

	{{form_start(form)}}<div class="container row">
		<div class="col-5">
			{{form_row(form.image)}}
			{{form_row(form.titre)}}
			{{form_row(form.pieces)}}
			{{form_row(form.loyer)}}
			{{form_row(form.departement)}}
		</div>
		<div class="col-5">
			{{form_row(form.terasse)}}
			{{form_row(form.parking)}}
			{{form_row(form.transaction)}}
			{{form_row(form.localisation)}}
			{{form_row(form.categorie)}}
		</div>
	</div>
	<div class="col-7">
		{{form_row(form.photo1)}}
		{{form_row(form.photo2)}}
		{{form_row(form.photo3)}}
		{{form_row(form.meuble)}}
	</div>
</div>
<button class='btn btn-danger' type="submit" name="action">Enregistrer</button>
{{form_end(form)}}</div>{% endblock %}

